BIN_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)
ROOT_DIR=$(dirname "$BIN_DIR")

VERSION=v1.40.0
IMAGE=mcr.microsoft.com/playwright:$VERSION


# Run the backstopjs command.
docker run --rm -t  -it -v ./:/src/ -w /src/ $IMAGE $1

DOCKER_EXIT_CODE=$?

exit $DOCKER_EXIT_CODE
